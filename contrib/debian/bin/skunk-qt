#!/bin/sh

set -e

umask 077

basedir=~/.bhcoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/bhcoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Bhcoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/bhcoin/bhcoin-qt "$@"
